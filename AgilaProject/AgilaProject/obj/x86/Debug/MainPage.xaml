<Page
    x:Class="AgilaProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AgilaProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:AgilaProject.Models"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="TeachersList"                          >
            <StackPanel x:ConnectionId='1' HorizontalAlignment="Left" Orientation="Horizontal">
                <Image x:ConnectionId='2' Width="150"                                HorizontalAlignment="Left"/>
                <StackPanel Margin="20,20,0,0">
                    <TextBlock x:ConnectionId='3' FontSize="16"                      HorizontalAlignment="Left" FontFamily="serif"/>
                    <TextBlock x:ConnectionId='4' FontSize="16"                        HorizontalAlignment="Left" FontFamily="serif"/>
                    <Rectangle x:Name="Color_Avaiablity_Teacher" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <!-- ItemsSource="{x:Bind ListViewTeachers} -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1024" Height="768">
        <ListView x:ConnectionId='5' x:Name="ListViewPopulate" 
                      IsItemClickEnabled="True"                                HorizontalContentAlignment="Left"
                      ItemTemplate="{StaticResource TeachersList}">
        </ListView>
    </Grid>
</Page>

